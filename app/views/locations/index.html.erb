		<div id="category_button">
			<div id="sort1" class="shop_sort">
				<i class="fas fa-shopping-bag"></i>
				<span class="sort_name">Shopping</span>
			</div>
			<div id="sort2" class="shop_sort">
				<i class="fas fa-utensils"></i>
				<span class="sort_name">Eat&Drink</span>
			</div>
			<div id="sort3" class="shop_sort">
				<i class="fas fa-cut"></i>
				<span class="sort_name">Salon</span>
			</div>
			<div id="sort4" class="shop_sort">
				<i class="fas fa-kiwi-bird parent"></i>
				<i class="fas fa-kiwi-bird kid1"></i>
				<i class="fas fa-kiwi-bird kid2"></i>
				<span class="sort_name">+kids</span>
			</div>
		</div>

	</div><!--buttom_space終わり-->
	<!--</div>-->
	
			<div id="streetConfirm"><!--wrapに巻き込まれないように-->
				<div id="info_fadeout" class="info_fadeout">×</div>
				<p id="streetCon">ストリート候補</p>
				<%= form_tag("/", method: :get) do %>
				<ul class="streetUl" style="list-style: none">
					<% if @streetNames.blank? %>
						<li></li>
					<% else %>
						<% @streetNames.each_with_index do |streetName, index| %>
						<li style="margin: 4vw 0vw 2vw -9vw; font-size:1.4rem;">
							<%= streetName.street_name %>
							<%= submit_tag"#{streetName.id}", class: "streetOK" %>
						</li>
						<% end %><!--each_with_indexのend-->
					<% end %><!--ifのend-->
				</ul>
				<% end %><!--form_tagのend-->
			</div>

