<body>
	<!--<div id="drowse_top">
		<p id="">ブラウザのurlなどが表示されるスペース</p>
	</div>
	-->

	<div id="main_space">
		<% @streetLength=@cityscape1.length*13.8%><!--道の長さ13=>16=>14=>13.5=>13.8-->
		
		<div id="street" style="width:<%= @streetLength %>vw;">
			<a class="streetString"><%= @streetSide.street_name %></a>
		</div>

		<%= render partial: 'locations/cityscape0', locals: {street: @streetSide0, city: @cityscape0 } %>
		<%= render partial: 'locations/cityscape1', locals: {street: @streetSide1, city: @cityscape1 } %>

		<div id="aboutus">
			<i class="fas fa-comment-dots"></i>
			<div class="whatishere">
				<h5>StreetIndex?</h5>
					<p>You can check all shops on the street.<br>
					通り沿いのお店をマルっとチェック。</p>
				<h5>News&Update</h5>
					<p>2021/2/**   テスト版スタート</p>
				<h5>ContactUs</h5>
					<p>店舗情報や掲載内容の変更・修正、イベント情報の掲載依頼、ご意見などは、<a href="mailto:moshimoshi.streetindex＠gmail.com" class="mailto">こちら</a></p>
			</div>
		</div>

	</div><!--#main_space終わり-->

	<div id="bottom_wrap">
	<div id="bottom_space">
		<div id="location_button">
			<div id="kensaku" class="">
				<%= form_tag("/", method: :get, :remote => true) do %> 
					<%= text_field_tag :search %>
					<%#= submit_tag "submit", id:"search_button" %>
					<%= button_tag sanitize('<i class="fa fa-search"></i>'), type:"submit", id:"search_button" %>
				<% end %>
			</div>
				
			<div id="gps_button" class="">
				<i class="fas fa-location-arrow"></i>
			</div>
		</div>
		
		<div id="event_wrap">
			<div id="event_area">
				<ul id="event_carousel">
				<% @events.each_with_index do |event, i| %>
					<% @random = Random.new %>
					<% @random = @random.rand(1..3) %>
					<% @bg="bg#{@random}.png" %>
						<li class="event_title" data-num="event-<%= i %>"
							style="animation  : event_titleAnime<%= @random %> 4s linear infinite alternate;
							background-image: url(<%= asset_path @bg %>);">
							<a class="e_title" href=<%= event.event_url %>><%= event.event_title %></a>
						</li>
				<% end %>
				</ul>
			</div>
		</div>

		<div id="category_button">
			<div id="sort1" class="shop_sort">
				<i class="fas fa-shopping-bag"></i>
				<span class="sort_name">Shopping</span>
			</div>
			<div id="sort2" class="shop_sort">
				<i class="fas fa-utensils"></i>
				<span class="sort_name">Eat&Drink</span>
			</div>
			<div id="sort3" class="shop_sort">
				<i class="fas fa-cut"></i>
				<span class="sort_name">Salon</span>
			</div>
			<div id="sort4" class="shop_sort">
				<i class="fas fa-kiwi-bird parent"></i>
				<i class="fas fa-kiwi-bird kid1"></i>
				<i class="fas fa-kiwi-bird kid2"></i>
				<span class="sort_name">kids</span>
			</div>
		</div>

	</div><!--buttom_space終わり-->
	</div>
	
				<div id="streetConfirm"><!--wrapに巻き込まれないように-->
				<p id="streetCon">ストリート候補</p>
				<%= form_tag("/", method: :get) do %>
				<% p "ここ通ってまーす！" %>
				<ul class="streetUl">
					<% if @streetNames.blank? %>
						<li></li>
					<% else %>
						<% @streetNames.each_with_index do |streetName, index| %>
						<li>
							<%= streetName.street_name %>
							<%= submit_tag"#{streetName.id}", class: "streetOK" %>
						</li>
						<% end %><!--each_with_indexのend-->
					<% end %><!--ifのend-->
				</ul>
				<% end %><!--form_tagのend-->
			</div>

	<!---
	<div id="drowse_bottom">
		<p>ブラウザの戻る進むボタンなどが表示される</p>
	</div>
	--->
	
	<div id="thegate">
		<p><input type="button" value="password" id="passwordinput"></p>
	</div>
</body>